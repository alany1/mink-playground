<mujocoinclude>
    <compiler angle="radian"/>
    <!-- meshdir="assets/meshes" texturedir="assets/textures" -->
    <option impratio="100"/>
    <option integrator="implicit"/>
    <option timestep="0.01"/>
    <option viscosity="0.1"/>
    <option gravity="0 0 -9.81"/>
<!--    <size memory="2G" />-->
    
<!--    timestep="0.001"-->
<!--   off render every frame -->

    <visual>
        <map fogstart="3" fogend="5" force="0.1" znear="0.1"/>
        <quality shadowsize="4096" offsamples="8" />
        <global offwidth="480" offheight="640"/>
    </visual>

    <statistic center="0.3 0 0.4" extent="1.8"/>
    <visual>
        <headlight diffuse="0.6 0.6 0.6"  ambient="0.1 0.1 0.1" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="120" elevation="-20"/>
    </visual>

    <asset>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
            rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
            reflectance="0.2"/>
<!--        <material name="plane_material" stiffness="5000" damping="10" />-->
    </asset>

</mujocoinclude>
